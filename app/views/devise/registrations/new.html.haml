#sign-up__account-page.account-page
  .sign-up__account-page__inner.clearfix
    .sign-up__account-page__inner--left.sign-up__account-page__header-create
      %h2 Create Account
      %h5 新規アカウントの作成
      = render "devise/shared/links"
    .sign-up__account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :password
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
      
        .actions
          = f.submit "Create Account", class: 'btn'
